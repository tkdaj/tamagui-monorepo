# Hoist React Native and Expo dependencies to resolve module resolution issues
public-hoist-pattern[]=*react-native*
public-hoist-pattern[]=*expo*
public-hoist-pattern[]=@react-native/*
public-hoist-pattern[]=@react-native-community/*

# Enable shamefully-hoist as fallback for React Native
shamefully-hoist=true

# Strict peer dependencies can cause issues with React Native
strict-peer-dependencies=false

# Auto-install peers to ensure consistency
auto-install-peers=true
